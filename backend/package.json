{
  "name": "opendex-backend",
  "version": "1.0.0",
  "description": "Backend API for OpenDexViewer - Open Source DexScreener Alternative",
  "main": "src/app.js",
  "scripts": {
    "start": "node src/app.js",
    "dev": "node --watch src/app.js",
    "db:migrate": "node db/migrate.js",
    "db:migrate:seed": "node db/migrate.js --seed",
    "db:status": "node db/migrate.js --status",
    "db:reset": "node db/migrate.js --reset",
    "postinstall": "node db/migrate.js || echo 'Migration skipped - no DATABASE_URL'"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "solana",
    "dex",
    "cryptocurrency",
    "token-viewer"
  ],
  "author": "The Sol Penguin",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.6.0",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "ioredis": "^5.3.2",
    "pg": "^8.11.3"
  }
}
